# Nursing Webboard Environment Variables
# คัดลอกไฟล์นี้เป็น .env.local และเติมค่าที่จำเป็น

# =============================================================================
# Google Sheets Integration
# =============================================================================

# Google Apps Script Web App URL
# ได้จากการ Deploy Google Apps Script เป็น Web App
VITE_GOOGLE_SHEETS_API_URL=https://script.google.com/macros/s/AKfycbz8h6Vrl4cVFq4DyOx9OGeZ2HQj_grZnjPYsfmQ55fJ9wklqBiUWdr89VAHXAS0yA-u/exec

# Google Sheets ID (สำรอง - ถ้าต้องการใช้ในการ backup)
VITE_GOOGLE_SHEETS_ID=1XjyikoXXjD9LxBjgyUDqzuMLl5ixZxzoublzAij3jyM

# =============================================================================
# Application Configuration
# =============================================================================

# Application Environment
VITE_APP_ENV=development
# Options: development, staging, production

# Application Version
VITE_APP_VERSION=2.0.0

# Application Name
VITE_APP_NAME=EduNursing Board

# Application URL
VITE_APP_URL=http://localhost:5173

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret (สำหรับ future authentication enhancement)
JWT_SECRET=your-super-secret-jwt-key-here

# API Rate Limiting (requests per minute)
VITE_RATE_LIMIT=60

# Session Timeout (minutes)
VITE_SESSION_TIMEOUT=30

# =============================================================================
# External Services
# =============================================================================

# reCAPTCHA v2 Site Key (ถ้าใช้ Google reCAPTCHA จริง)
VITE_RECAPTCHA_SITE_KEY=6Lfs54krAAAAAAYxM-gAQJpbJ5DJ3wuBd9YPoYVW

# IP Geolocation API (ถ้าต้องการ location tracking ที่แม่นยำกว่า)
VITE_IP_API_URL=https://ipapi.co
VITE_IP_API_KEY=your-ip-api-key

# =============================================================================
# Development Configuration
# =============================================================================

# Enable Debug Mode
VITE_DEBUG=true

# Enable API Logging
VITE_API_LOGGING=true

# Mock Data (สำหรับ development)
VITE_USE_MOCK_DATA=false

# =============================================================================
# Deployment Configuration
# =============================================================================

# Deploy Target
# Options: github-pages, vercel, netlify, custom
DEPLOY_TARGET=github-pages

# Custom Domain (ถ้ามี)
CUSTOM_DOMAIN=your-domain.com

# =============================================================================
# Monitoring & Analytics
# =============================================================================

# Google Analytics (ถ้าต้องการ)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN (สำหรับ error tracking)
VITE_SENTRY_DSN=your-sentry-dsn

# =============================================================================
# Email Configuration (สำหรับ notifications - future enhancement)
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Admin Email
ADMIN_EMAIL=admin@nursing.ac.th

# =============================================================================
# Database Backup (สำหรับ automated backup)
# =============================================================================

# Backup Frequency (hours)
BACKUP_FREQUENCY=24

# Backup Storage
BACKUP_STORAGE_TYPE=local
# Options: local, google-drive, aws-s3

# =============================================================================
# Security Headers
# =============================================================================

# Content Security Policy
CSP_ENABLED=true

# HTTPS Enforcement
FORCE_HTTPS=true

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/Disable Features
FEATURE_OFFLINE_MODE=true
FEATURE_AUTO_BACKUP=true
FEATURE_REAL_TIME_UPDATES=false
FEATURE_PUSH_NOTIFICATIONS=false

# =============================================================================
# Medical Content Validation
# =============================================================================

# Enable Medical Content Checking
MEDICAL_VALIDATION_ENABLED=true

# Medical Terms Database
MEDICAL_TERMS_SOURCE=local
# Options: local, external-api

# =============================================================================
# Performance Configuration
# =============================================================================

# Cache Duration (seconds)
CACHE_DURATION=3600

# Image Optimization
IMAGE_OPTIMIZATION=true

# Bundle Analysis
ANALYZE_BUNDLE=false
